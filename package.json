{
  "name": "react-starter",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "~4.2.4",
    "@testing-library/react": "~9.5.0",
    "@testing-library/user-event": "~7.2.1",
    "axios": "~0.19.2",
    "react": "~16.13.1",
    "react-dom": "~16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:all": "react-scripts test --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint \"./**/*.js\"",
    "lint:css": "prettier --check \"./**/*.css\" && stylelint \"./**/*.css\"",
    "lint:json": "prettier --check \"./**/*.json\"",
    "lint:yml": "prettier --check \"./**/*.yml\"",
    "format": "npm-run-all format:*",
    "format:js": "eslint --fix \"./**/*.js\"",
    "format:css": "prettier --write \"./**/*.css\"",
    "format:json": "prettier --write \"./**/*.json\"",
    "format:yml": "prettier --write \"./**/*.yml\"",
    "deps:check": "npm-check",
    "deps:upgrade": "npm-check -u"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/cypress": "~6.0.0",
    "axios-mock-adapter": "~1.18.1",
    "cypress": "~4.3.0",
    "eslint": "~6.8.0",
    "eslint-config-prettier": "~6.10.1",
    "eslint-config-prettier-standard": "~3.0.1",
    "eslint-config-standard": "~14.1.1",
    "eslint-plugin-cypress": "~2.10.3",
    "eslint-plugin-import": "~2.20.2",
    "eslint-plugin-jest": "~23.8.2",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-prettier": "~3.1.2",
    "eslint-plugin-promise": "~4.2.1",
    "eslint-plugin-standard": "~4.0.1",
    "husky": "~4.2.3",
    "identity-obj-proxy": "~3.0.0",
    "jest-axe": "~3.4.0",
    "lint-staged": "~10.1.2",
    "markdownlint": "~0.19.0",
    "markdownlint-cli": "~0.22.0",
    "npm-check": "~5.9.2",
    "npm-run-all": "~4.1.5",
    "prettier": "~2.0.4",
    "prettier-config-standard": "~1.0.1",
    "stylelint": "~13.0.0",
    "stylelint-config-prettier": "~8.0.1",
    "stylelint-config-standard": "~19.0.0"
  },
  "lint-staged": {
    "./**/*.json": [
      "prettier --check"
    ],
    "./**/*.js": [
      "eslint"
    ],
    "./**/*.css": [
      "prettier --check",
      "stylelint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
